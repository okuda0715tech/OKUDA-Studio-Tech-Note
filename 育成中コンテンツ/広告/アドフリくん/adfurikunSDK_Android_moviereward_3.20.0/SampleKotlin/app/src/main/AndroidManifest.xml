<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.glossom.sample.samplekotlin">

    <application
        android:name=".SampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SimpleAppOpenAd"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".SimpleInterstitial"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".SimpleNativeAd"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".SimpleRectangle"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".SimpleBanner"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".SimpleBannerAutoRefresh"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".SimpleMovieReward"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".admob.SimpleAdMobReward"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".admob.SimpleAdMobInterstitial"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".admob.SimpleAdMobNativeAd"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".admob.SimpleAdMobRectangle"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".admob.SimpleAdMobBanner"
            android:configChanges="keyboardHidden|orientation|screenSize" />

        <!-- アドフリくんデバッグログ -->
        <meta-data
            android:name="adfurikun_test"
            android:value="true" />

        <!-- Google Mobile Ads SDK version 17.0.0からこのフラグは必須です -->
        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />
    </application>
</manifest>
